<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufpi.es.ourbook.visao.TelaCadastrar">

    <EditText
        android:id="@+id/etEdicao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Edição"
        android:inputType="text"
        android:nextFocusDown="@+id/btAdd"
        app:layout_constraintLeft_toLeftOf="@+id/etGenero"
        app:layout_constraintRight_toRightOf="@+id/etGenero"
        app:layout_constraintTop_toBottomOf="@+id/etGenero"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etGenero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Gênero"
        android:inputType="text"
        android:nextFocusDown="@+id/etEdicao"
        app:layout_constraintLeft_toLeftOf="@+id/etEditora"
        app:layout_constraintRight_toRightOf="@+id/etEditora"
        app:layout_constraintTop_toBottomOf="@+id/etEditora"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etEditora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Editora"
        android:inputType="text"
        android:nextFocusDown="@+id/etGenero"
        app:layout_constraintLeft_toLeftOf="@+id/etAutor"
        app:layout_constraintRight_toRightOf="@+id/etAutor"
        app:layout_constraintTop_toBottomOf="@+id/etAutor"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etAutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Autor"
        android:inputType="text"
        android:nextFocusDown="@+id/etEditora"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitulo"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="text"
        android:nextFocusDown="@+id/etAutor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <Button
            android:layout_width="178dp"
            android:layout_height="60dp"
            android:onClick="cadastarLivro"
            android:text="Inserir Livro" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="cancelar"
            android:text="Cancelar" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
